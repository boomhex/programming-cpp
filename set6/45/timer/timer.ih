#include "timer.h"

#include <ostream>
#include <chrono>
#include <cstdint>

using namespace std;
using namespace std::chrono;

// static
inline size_t Timer::nowMs()
{
    auto const nowNs = duration_cast<nanoseconds>(
        system_clock::now().time_since_epoch()).count();

    return static_cast<std::size_t>(nowNs / 1'000'000);   // ns -> ms
}
