#include "timer.h"

#include <ostream>
#include <chrono>
#include <cstdint>

using namespace std;
using namespace std::chrono;

enum
{
    NANOSEC2MILLISEC = 1'000'000
};

// static
inline size_t Timer::nowMs()
{
    auto const nowNs = system_clock::now().time_since_epoch().count();

    return nowNs / NANOSEC2MILLISEC;   // ns to ms
}
